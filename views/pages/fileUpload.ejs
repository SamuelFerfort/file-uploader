<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2>Upload File</h2>
      <form action="/files/upload" enctype="multipart/form-data" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" >
        </div>
        <div class="form-group">
          <label for="file">Choose a file:</label>
          <input type="file" class="form-control-file" id="file" name="file" required>
        </div>
        <div class="form-group">
          <label for="folderId">Select Folder:</label>
          <select class="form-control" name="folderId" id="folderId" required>
            <% if (folders && folders.length > 0) { %>
              <% folders.forEach(function(folder) { %>
                <option value="<%= folder.id %>"><%= folder.name %></option>
              <% }) %>
            <% } else { %>
              <option value="">No folders available</option>
            <% } %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Upload File</button>
      </form>
      <p class="mt-3">No folders? <a href="/folder/create">Create one first</a></p>
    </div>
  </div>
</div>
