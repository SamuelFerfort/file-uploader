

<div class="container mt-5">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <form action="/files/upload" enctype="multipart/form-data" method="post">
          <div class="form-group">
            <label for="uploaded_file">Choose a file:</label>
            <input type="file" class="form-control-file" id="uploaded_file" name="uploaded_file">
          </div>
          
            <select name="folders" id="folders">
                <% folders.forEach( function(folder) { %>
                    <option value="<%= folder.id %>"> <%= folder.name %> </option>
               <% }) %>
            </select>

          <button type="submit" class="btn btn-primary">Upload File</button>
        </div>
      </form>
    </div>
  </div>